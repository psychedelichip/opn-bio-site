---
import '@/styles/global.css';
import { inject } from '@vercel/analytics';

interface Props {
  description?: string;
  og?: string;
  title?: string;
}

const title = Astro.props.title
  ? `${Astro.props.title} â€” OPN`
  : 'OPN: Your Open-Source Bio Page';

const description = Astro.props.description || 'Your open-source bio page.';

const og = Astro.props.og || '/og.png';

// Analytics
inject();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta content="width=device-width" name="viewport" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content={Astro.generator} name="generator" />
    <meta content="#18181b" name="theme-color" />

    <title>{title}</title>
    <meta content={title} name="title" />
    <meta content={description} name="description" />

    <meta content={title} property="og:title" />
    <meta content={description} property="og:description" />
    <meta content="OPN" property="og:site_name" />
    <meta content="https://opn.bio/" property="og:url" />
    <meta content="website" property="og:type" />
    <meta content={`https://opn.bio${og}`} property="og:image" />

    <link href="/sitemap-index.xml" rel="sitemap" />
    
    <script is:inline>
      // Dark mode initialization (default dark)
      const getTheme = () => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        return 'dark'; // Default dark mode
      };
      
      const theme = getTheme();
      
      if (theme === 'light') {
        document.documentElement.classList.remove('dark');
      } else {
        document.documentElement.classList.add('dark');
      }
      
      window.localStorage.setItem('theme', theme);
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>
